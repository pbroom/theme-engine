{
    "extends": "@create-figma-plugin/tsconfig",
    "compilerOptions": {
        "skipLibCheck": true,
        "typeRoots": ["./node_modules/@types", "./node_modules/@figma"],
        "forceConsistentCasingInFileNames": true,
        "jsx": "react",
        "baseUrl": ".",
        "paths": {
            "@/*": ["./*"]
        }
    },
    "include": ["src/**/*.ts", "src/**/*.tsx"],
    "exclude": ["node_modules", "dist"]
}
