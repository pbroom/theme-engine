{
  "name": "@create-figma-plugin/common",
  "version": "2.5.1",
  "publishConfig": {
    "access": "public"
  },
  "description": "Internal utilities for the Create Figma Plugin toolkit",
  "keywords": [
    "create-figma-plugin",
    "figjam",
    "figma",
    "figma-plugin",
    "figma-plugins"
  ],
  "license": "MIT",
  "author": "Yuan Qing Lim",
  "repository": {
    "type": "git",
    "url": "git://github.com/yuanqing/create-figma-plugin.git",
    "directory": "packages/common"
  },
  "type": "module",
  "engines": {
    "node": ">=18"
  },
  "files": [
    "lib"
  ],
  "exports": "./lib/index.js",
  "main": "./lib/index.js",
  "scripts": {
    "prebuild": "npm run clean",
    "build": "npm run build:js && npm run build:generate-index",
    "build:js": "tsc --build",
    "build:generate-index": "tsx ../../scripts/generate-index.ts -- 'src/**/*.ts' && eslint --fix src/index.ts",
    "clean": "rimraf '*.log' .turbo lib tsconfig.tsbuildinfo",
    "fix": "concurrently npm:fix:js npm:fix:json",
    "fix:js": "eslint --fix '{src,test}/**/*.ts'",
    "fix:json": "prettier --loglevel error --write '*.json' 'test/**/fixtures/**/*.json'",
    "lint": "eslint '{src,test}/**/*.ts'",
    "pretest": "npm run build",
    "test": "ava --serial 'test/**/*.ts'"
  },
  "dependencies": {
    "@sindresorhus/slugify": "2.2.1",
    "fs-extra": "^11.1.1",
    "kleur": "^4.1.5"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.1",
    "@types/node": "^20.2.4",
    "@typescript-eslint/eslint-plugin": "5.59.7",
    "ava": "^5.3.0",
    "concurrently": "^8.0.1",
    "eslint": "^8.41.0",
    "eslint-config-yuanqing": "0.0.8",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-react": "7.32.2",
    "eslint-plugin-react-hooks": "4.6.0",
    "eslint-plugin-simple-import-sort": "10.0.0",
    "eslint-plugin-sort-keys-fix": "1.1.2",
    "prettier": "^2.8.8",
    "rimraf": "^5.0.1",
    "tsx": "^3.12.7",
    "typescript": "^5.0.4"
  },
  "ava": {
    "extensions": {
      "ts": "module"
    },
    "failFast": true,
    "nodeArguments": [
      "--loader",
      "tsx"
    ],
    "timeout": "2m",
    "workerThreads": false
  },
  "eslintConfig": {
    "extends": "eslint-config-yuanqing",
    "root": true,
    "env": {
      "node": true
    }
  },
  "prettier": "eslint-config-yuanqing/prettier",
  "gitHead": "cb6879f4602f97f268ed0bbab461927b7e34bd88"
}
